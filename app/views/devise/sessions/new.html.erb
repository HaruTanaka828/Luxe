
<%= link_to root_path do %>
<p class="adminheader">Luxe Resorts</p>
<% end %>

<div class="center">
<div class="container">

  <div class="row">
    <br><br><br><br><br><br><br><br>
  </div>

  <div class="row">

      <div class="col-xs-4">
      </div>

      <div class="col-xs-4">
        <h3>管理者ログイン</h3><br>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control',placeholder: "メールアドレス"%><br>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password",class:'form-control',placeholder: "パスワード" %>
          </div>
          <br>
          <div class="actions">
            <%= f.submit "ログイン",class:"btn btn-block btn-primary" %>
          </div><br>
          <% end %>
      </div>
      <div class="col-xs-4">
      </div>
  </div>

</div>
</div>

